{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "@application/*": [
        "application/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@presentation/*": [
        "presentation/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
    }
  },
  "include": [
    "src",
    "__tests__"
  ],
  "exclude": [
    "node_modules"
  ]
}